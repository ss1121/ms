.boxer
  width 100vw
  height 100vh
  overflow hidden
  position relative
  .stickyBottomBar
    position fixed
    left 30rpx
    bottom 50rpx
    width 96vw
    .recodeButton
      font-size 22px
      image
        margin 0 auto
  .ul
    width 100%
    height 100%
    padding-bottom 60px
    .item-title
      font-size 20px
      margin-left: 18px
      margin-top 18px
      display block
  .item-normal
    width auto
    height 180px
    overflow hidden
    font-size 14px
    padding 10px
    border-radius 5px
    margin-bottom 20rpx
    .htitles
      display-flex(row nowrap, space-between, center, center)
      width 100%
      .item-icon
        font-size 14px
        &:after
          content: '\e618'

