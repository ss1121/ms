// 分类编辑列表
.shelf-item-edit-title
  font-size 30px
  margin-bottom 10px
  padding 10px

.shelf-cat-container
  background-color #fff
  .input-container
    font-size 12px


.shelf-cat-list
  border-top 1px solid #ccc
  border-bottom 1px solid #ccc
  padding 0 14px 0 10px;
  .shelf-cat-list-item
    padding 10px 0;
    border-bottom 1px solid red
    &:last-child
      border-bottom: none
    .htitles
      display:flex
      justify-content: space-between