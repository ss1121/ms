.boxer
  width 100vw
  height 100%
  position relative
  .input-item
    margin 0
    .input-item-content
      padding 34rpx 5rpx;
  .picker-select
    display flex
    width auto;
    justify-content: flex-start
    .picker-select-item
      display block
      &:first-child
        &:before
          content: '开始时间：'
      &:last-child
        &:before
          content: '-- 结束时间：'
          margin-left 8px

  .ul
    width 100%
    height 100%
    padding-bottom 60px
    .item-title
      font-size 20px
      margin-left: 18px
      margin-top 18px
      display block
  .item-normal
    width auto
    height 180px
    overflow hidden
    font-size 14px
    padding 10px
    border-radius 5px
    margin-bottom 20rpx
    .htitles
      display-flex(row nowrap, space-between, center, center)
      width 100%
      .item-icon
        font-size 14px
        &:after
          content: '\e618'

